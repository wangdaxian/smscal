<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relative1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30sp"


            />

        <EditText
            android:id="@+id/qinphone1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/relative2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relative2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30sp"


            />

        <EditText
            android:id="@+id/qinphone2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/relative3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relative3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30sp"


            />

        <EditText
            android:id="@+id/qinphone3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:textSize="30sp"
            android:text="@string/saveconf"
            android:id="@+id/saveconf"
            android:gravity="center"
            android:layout_weight="0.16" />


    </LinearLayout>
</LinearLayout>